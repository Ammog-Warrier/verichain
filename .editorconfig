# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json,yaml,yml}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{sh,bash}]
indent_size = 4

[*.py]
indent_size = 4

[*.sol]
indent_size = 4

[Makefile]
indent_style = tab

[*.go]
indent_style = tab
indent_size = 4
